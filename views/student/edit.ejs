
<%- include ../layouts/header.ejs %>	
<style>
	body{
	  background-color:rgba(216, 203, 203, 0.89);
	}
		  </style>
		
<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>
<div class="col col-12 col-sm-5">
<form action="/students/edit/<%= id %>" method="post" name="form1">
	<h1  align="center">REGISTRATION</h1>
	<table class="table "> 
	<tr> 
		<td>NAME</td>
		<td><input type="text" name="name" id="name" value="<%= name %>" pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,20}$" autocomplete="off" required /></td>
	</tr>
	<tr>
		<td>DOB</td>
							  <td> <input type="date" name="dob" id="dob" value="<%= dob %>" required></td>
						  </tr>
	
	<tr> 
		<td>EMAIL</td>
		<td><input type="email" name="email" value="<%= email %>" autocomplete="off" required /></td>
	</tr>
	<tr>
		<td>PHONE NUMBER</td>
		<td><input type="text" name="mobile" id="mobile" value="<%= mobile %>" pattern="[6789]{1}[0-9]{9}" autocomplete="off"  required></td>
	</tr>
	<tr>
		<td>QUALIFICATION</td>
		 <td><input type="text" name="qual" id="qual" value="<%= qual %>" autocomplete="off" required></td>

	
	  </tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="Edit" /></td>
		</tr>
	</table>
	<input type="hidden" name="_method" value="PUT" />
</div>
</form>

<%- include ../layouts/footer.ejs %>
